<?xml version="1.0" encoding="UTF-8" ?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="알림 설정">
        <SwitchPreference
            android:key="message"
            android:title="알림"
            android:summary=""/>
        <PreferenceScreen
            android:key="keyword_screen"
            android:title="키워드 알림"
            android:summary="베타 버전에서 사용 가능">
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="소리 설정">
        <SwitchPreference
            android:key="sound"
            android:title="소리 알림" />
        <ListPreference
            android:entries="@array/array_voice"
            android:entryValues="@array/array_voice"
            android:key="sound_list"
            android:summary="상황 발생시 재생될 소리를 설정합니다."
            android:title="알림음 설정" />
        <SeekBarPreference
            android:key="seekbar"
            android:title="소리 크기 설정"
            android:max="10"
            android:defaultValue="5"/>
        <SwitchPreference
            android:key="vibrate"
            android:title="진동 알림" />
    </PreferenceCategory>
</PreferenceScreen>

